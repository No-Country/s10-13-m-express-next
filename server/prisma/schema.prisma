// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id                String      @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  lastName          String
  phone             String
  email             String      @unique
  role              role?
  password          String
  profileImage      String?
  posts             Posts[]
  volunteering      Volunteers[]
  initiatives       Initiative[] @relation(name: "UserInitiatives")
}


model Posts {
  id                String      @id @default(auto()) @map("_id") @db.ObjectId
  userId            String      @db.ObjectId
  user              User        @relation(fields: [userId], references: [id])
  description       String 
  createdAt         DateTime    @default(now())
  galery            String?
}

enum role {
  volunteer
  organization
}

model Session {
  id    String      @id @default(auto()) @map("_id") @db.ObjectId
  expires DateTime
  session SessionInfo
}

type SessionInfo {
  user UserSession
}

type UserSession {
  userId String
}
